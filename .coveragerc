# Coverage.py configuration for Bazzite Gaming Optimization Suite

[run]
source = .
omit =
    tests/*
    setup.py
    */site-packages/*
    */__pycache__/*
    */venv/*
    */env/*
    ref_scripts/*
    ref_docs/*

[report]
precision = 2
show_missing = True
skip_covered = False

exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:

    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod

[html]
directory = htmlcov

[xml]
output = coverage.xml
